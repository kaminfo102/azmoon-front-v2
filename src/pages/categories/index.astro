---
import Layout from '@/layouts/Layout.astro';
import { CategoryList } from '@/components/categories/category-list';

const allCategories = [
  {
    id: 'programming',
    title: 'برنامه‌نویسی',
    description: 'آزمون‌های مرتبط با برنامه‌نویسی و توسعه نرم‌افزار',
    imageUrl: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=500&h=300&fit=crop',
    testCount: 24,
    tags: ['جاوااسکریپت', 'پایتون', 'جاوا']
  },
  {
    id: 'english',
    title: 'زبان انگلیسی',
    description: 'آزمون‌های تعیین سطح و مهارت زبان انگلیسی',
    imageUrl: 'https://images.unsplash.com/photo-1546410531-bb4caa6b424d?w=500&h=300&fit=crop',
    testCount: 18,
    tags: ['آیلتس', 'تافل', 'مکالمه']
  },
  // Add more categories...
];
---

<Layout title="دسته‌بندی‌های آزمون">
  <div class="container py-8">
    <div class="flex flex-col gap-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
          <h1 class="text-3xl font-bold mb-2">دسته‌بندی‌های آزمون</h1>
          <p class="text-muted-foreground">
            دسته‌بندی مورد نظر خود را انتخاب کنید و در آزمون‌های مختلف شرکت کنید.
          </p>
        </div>
        <div class="w-full md:w-auto">
          <input
            type="search"
            placeholder="جستجو در دسته‌بندی‌ها..."
            class="w-full md:w-64 px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
      </div>
      
      <CategoryList client:load initialCategories={allCategories} pageSize={6} />
    </div>
  </div>
</Layout>
