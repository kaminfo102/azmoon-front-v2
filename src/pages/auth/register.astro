---
import Layout from '@/layouts/Layout.astro';
import { AuthCard } from '@/components/auth/auth-card';
import { RegisterForm } from '@/components/auth/register-form';
---

<Layout title="ثبت‌نام">
  <div class="container flex items-center justify-center min-h-[calc(100vh-4rem)] py-8">
    <AuthCard
      client:load
      title="ثبت‌نام در سامانه"
      description="برای شرکت در آزمون‌ها ثبت‌نام کنید"
    >
      <RegisterForm client:load onSubmit={() => {}} />
      <div class="mt-6 text-center">
        <span class="text-muted-foreground">قبلاً ثبت‌نام کرده‌اید؟</span>
        <a href="/auth/login" class="text-primary hover:underline mr-1">وارد شوید</a>
      </div>
    </AuthCard>
  </div>
</Layout>
---